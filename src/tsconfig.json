{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Path resolution */
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "*.tsx",
    "*.ts",
    "main.tsx",
    "App.tsx",
    "components/**/*.tsx",
    "components/**/*.ts",
    "pages/**/*.tsx",
    "pages/**/*.ts",
    "utils/**/*.tsx",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "supabase/functions"
  ]
}
